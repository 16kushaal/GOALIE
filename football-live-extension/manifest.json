{
  "manifest_version": 3,
  "name": "Live Score Snippets (Popup Demo)",
  "version": "1.0",
  "description": "A demonstration of AI-powered football commentary summaries from multiple text files.",
  "permissions": [],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "host_permissions": [
    "http://127.0.0.1:5000/",
    "https://generativelanguage.googleapis.com/"
  ]
}
